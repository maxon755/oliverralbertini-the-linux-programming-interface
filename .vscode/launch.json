    "version": "0.2.0",
    "configurations": [
        {
            "name": "cp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/fileio/copy",
            "args": ["../acl", "test2"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/fileio",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make copy",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true
            },
            "linux": {
                "MIMode": "gdb"
            }
        },
        {
            "name": "test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/fileio/test",
            "args": ["copy.c"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/fileio",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make test",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true
            },
            "linux": {
                "MIMode": "gdb"
            }
        }
    ]
}
